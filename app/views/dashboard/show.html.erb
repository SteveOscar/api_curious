<%= image_tag('bird.png', class: "bird") %>
<%= image_tag current_user.image_url, class: "img-circle img-thumbnail home-image" %>
<%= link_to "Logout", "/logout", class: "btn btn-lg btn-default btn-home fades1", method: :delete %>
<%= link_to "Dashboard", dashboard_path, class: "btn btn-lg btn-default btn-home fades2" %>
<h6 class="stats"> <%= @followers %> followers,</h6>
<h6 class="stats2"> following <%= @friends %> </h6>

<div class="container">
  <div class="intro">
    <h1 class="home hi">Hi, <%= current_user.name %></h1>
    <h2 class="home bio"> <%= current_user.bio %> </h2>
  </div>

  <div class="pillar container">
    <div>
      <h2 class="header home">Your Twitter Stats</h2>
    </div>
    <div class="row">
      <div class="col-6sm">
        <%= link_to "Timeline", "/feed", class: "btn btn-lg btn-default btn-dash" %>
        <%= link_to "Your Posts", posts_path, class: "btn btn-lg btn-default btn-dash" %>
      </div>
      <div class="row">
        <%= link_to "Mentions", '/mentions', class: "btn btn-lg btn-default btn-dash fades3" %>
        <%= link_to "Retweets", '/retweeted', class: "btn btn-lg btn-default btn-dash fades3" %>
      </div>
    </div>

    <div class="tweet-form">
      <%= form_tag('/posts', :method => "post") do %>
          <%= label_tag(:q, "Tweet:", class: "small-text") %>
          <%= text_field_tag(:q) %>
          <div><%= image_submit_tag('bird.png', class: "tweet-bird", id: "send-tweet") %></div>
      <% end -%>
    </div>
  </div>
</div>
