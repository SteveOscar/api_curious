<%= image_tag current_user.image_url, class: "img-circle img-thumbnail home-image fades1" %>
<%= link_to "Logout", "/logout", class: "btn btn-lg btn-default btn-home fades2", method: :delete %>
<%= link_to "Your Posts", posts_path, class: "btn btn-lg btn-default btn-home fades3" %>
<%= link_to "Timeline", "/logout", class: "btn btn-lg btn-default btn-home fades3", method: :delete %>


<div class="container-fluid container-home">

    <div class="ticker">
      <ul id="scroller">
        <% @tweets.each do |tweet| %>
          <li class="tweet"> <%= tweet %> </li>
        <% end %>
      </ul>
    </div>

</div>
